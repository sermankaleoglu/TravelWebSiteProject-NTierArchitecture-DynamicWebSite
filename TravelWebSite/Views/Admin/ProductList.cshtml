@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width:30px;">ID</td>
                    <td style="width:200px;">Image</td>
                    <td>Name</td>
                    <td style="width:300px;">Description</td>
                    <td style="width:80px;">Price</td>
                    <td style="width:150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Product.Count>0)
                {
                    @foreach (var item in Model.Product)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td align="center"><img src="~/img/@item.ImageUrl" width="100" height="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>
                                <a href="/admin/EditProduct/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/admin/DeleteProduct" method="POST" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>


                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Products</h3>
                    </div>
                }
                
            </tbody>
        </table>
    </div>        
</div>


